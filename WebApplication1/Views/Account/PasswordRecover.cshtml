
@{
    ViewBag.Title = "PasswordRecover";
}


<form action="/Account/PasswordRecover" method="post">
    <div class="form-group">
        <input class="form-control" type="email" name="EmailToBeRecover" placeholder="ელ. ფოსტის მისამართი" />
    </div>
    <div class="form-group">
        <input class="form-control" type="password" name="NewPassword" placeholder="ახალი პაროლი" />
    </div>

    <div class="form-group">
        <input type="submit" placeholder="ახალი პაროლი" />
    </div>


  

    <p>@ViewBag.error</p>

</form>
